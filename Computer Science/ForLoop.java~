class ForLoop {
  public static void main(String[] args) {
    
   // for (int i = 0; i< 9; i++) {
      //A: declaring a counting variable and giving it a value
      //B: The condition for the loop to terminate
      //C: The incriment value
     // System.out.println("Hello World");
    for (int i = 0; i< 101; i+=2) {
      System.out.println("The value of i is:");
      System.out.println(i);
    }
    
    // the variable i is considered a local variable
    // THis means that "i" does not exist anywhere in the code EXCEPT for within the loop
    //System.out.println(i);
  }
}